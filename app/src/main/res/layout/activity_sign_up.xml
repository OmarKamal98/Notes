<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    >


    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color1"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        tools:context=".activities.Sign_up">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:textColor="#1A1824"
        android:textSize="20sp"
          />

    <TextView
        android:layout_marginBottom="12dp"
        android:id="@+id/textView8"
        android:layout_width="340dp"
        android:layout_height="96dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/textView4"
        android:text="@string/signup"
        android:textColor="#1A1824"
        android:textSize="24sp"
        android:textStyle="bold"
         />
        <EditText
            android:id="@+id/name_edit_text_sign_up"
            android:layout_width="375dp"
            android:layout_height="52dp"
            android:drawableLeft="@drawable/user"
            android:layout_below="@+id/textView8"
            android:ems="10"
            android:drawablePadding="12dp"
            android:hint="Your name"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_shape"
            />
    <EditText
        android:id="@+id/email_edit_text_sign_up"
        android:layout_width="375dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="12dp"
        android:layout_below="@+id/name_edit_text_sign_up"
        android:ems="10"
        android:hint=" Your email address"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_text_shape"
         />

    <EditText
        android:id="@+id/password_edit_text_sign_up"
        android:layout_width="375dp"
        android:layout_height="52dp"
        android:ems="10"
        android:drawableStart="@drawable/password"
        android:hint="Your password"
        android:inputType="textPassword"
        android:drawablePadding="12dp"
        android:background="@drawable/edit_text_shape"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/email_edit_text_sign_up" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="By signing up you accept the Terms of  Service and Privacy Policy."
        android:layout_below="@+id/password_edit_text_sign_up" />

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="315dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/text"
        android:background="@drawable/box"
        android:text="Sign up"
        android:onClick="singup"
        android:textAllCaps="false"
        android:textColor="#FFF9F9"
         />
        <TextView
            android:onClick="haveAccount"
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:text="Have an Account?"
             />


        <TextView
            android:onClick="skipSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:text="Skip"
            android:textAllCaps="true"
             />
        <ProgressBar
            android:id="@+id/progress_bar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:progressBarStyleLarge"
            android:layout_centerInParent="true"
            android:visibility="gone"

            />
    </RelativeLayout>
</ScrollView>